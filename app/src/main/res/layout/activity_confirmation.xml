<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirmation"
    android:background="#32a852"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/joti_one"
        android:text="TUCK BOX"
        android:textColor="#FFFFFF"
        android:textSize="65sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/yellow"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordered Confirmation:\n"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/con_ordered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:text="ordered"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/con_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:text="time"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/con_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:text="region"/>
        <TextView
            android:id="@+id/con_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:text="address"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/con_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:text="note"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/con_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"
            android:text="payment"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us\nMobile : 09 356 4585\nEmail : info@tuckbox.co.nz\nAddress : 123 Main Street, Palmerston North ,New Zealand"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/con_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/btn_confirm_cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text="Cancel order"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/back_button"
            android:onClick="confirmCancelButtonClicked"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Confirm order"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/next_button"
            android:onClick="finalConfirmButtonClicked"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>