<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserUpdateInfo"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#32a852">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/joti_one"
        android:text="TUCK BOX"
        android:textColor="#FFFFFF"
        android:textSize="65sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/button1"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:text="Personal Info"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@color/yellow"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:onClick="personalInfoButtonClicked"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:text="Financial Info"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@color/fen"
            android:layout_marginBottom="10dp"
            android:onClick="financialInfoButtonClicked"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Delivery Info"
            android:background="@color/blue"
            android:layout_marginRight="20dp"
            android:onClick="dliveryInfoButtonClicked"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:text="Go Back"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@color/zi"
            android:onClick="goBackButtonClicked"/>
    </LinearLayout>
</LinearLayout>



